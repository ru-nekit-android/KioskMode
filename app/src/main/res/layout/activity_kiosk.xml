<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ru.nekit.android.kioskmodeapplication.KioskActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/destroy_button"
            android:layout_alignLeft="@+id/destroy_button"
            android:layout_alignRight="@+id/destroy_button"
            android:layout_alignStart="@+id/destroy_button"
            android:layout_centerVertical="true"
            android:text="@string/exit_title" />

        <Button
            android:id="@+id/destroy_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exit_button"
            android:layout_centerHorizontal="true"
            android:text="@string/stop_periodic_call_title" />
    </RelativeLayout>

</layout>
